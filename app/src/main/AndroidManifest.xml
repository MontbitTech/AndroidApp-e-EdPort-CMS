<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.application.schooltime">

    <uses-permission android:name="android.permission.ACCESS_NETWORK_STATE" />
    <uses-permission android:name="android.permission.INTERNET" />

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:networkSecurityConfig="@xml/network_security_config"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">
        <activity android:name=".SchoolInformation.SchoolInformationActivity"/>
        <activity android:name=".IntroSlider.IntroSliderActivity">

        </activity>
        <activity
            android:name=".SchoolActivity"
            android:label="@string/title_activity_school"
            android:theme="@style/AppTheme.NoActionBar" >


        </activity>
        <activity
            android:name=".SplashScreen"
            android:label="@string/title_activity_school"
            android:theme="@style/AppTheme.Splash">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>

        </activity>
    </application>

</manifest>